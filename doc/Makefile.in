.SUFFIXES: .tex .dvi .doc .pl

SHELL=@SHELL@
PLBASE=@PLBASE@
PLARCH=@PLARCH@
PL=@PL@
PLSRC=/home/janw/src/pl-devel
XPCEBASE=$(PLBASE)/xpce
PKGDOC=$(PLBASE)/doc/packages
PCEHOME=../pl/packages/xpce
LIBDIR=$(PLBASE)/library/semweb/serql
EXDIR=$(PKGDOC)/examples/http
RUNTEX=$(PLSRC)/man/runtex

DOCTOTEX=$(PLSRC)/man/doc2tex
LATEX=latex
DOC=cliopatria
TEX=$(DOC).tex
DVI=$(DOC).dvi
PDF=$(DOC).pdf
HTML=$(DOC).html

INSTALL=@INSTALL@
INSTALL_PROGRAM=@INSTALL_PROGRAM@
INSTALL_DATA=@INSTALL_DATA@

################################################################
# Documentation
################################################################

doc:		$(PDF) $(HTML)
pdf:		$(PDF)
html:		$(HTML)

$(HTML):	$(TEX)
		latex2html $(DOC)
		mv html/index.html $@
		rmdir html

$(PDF):		$(TEX)
		$(RUNTEX) --pdf $(DOC)

$(TEX):		$(DOCTOTEX)

.doc.tex:
		$(DOCTOTEX) $*.doc > $*.tex
.pl.tex:
		$(PLTOTEX) $*.pl > $*.tex

################################################################
# Clean
################################################################

clean:
		rm -f *~ *% config.log
		rm -f $(TEX)
		$(RUNTEX) --clean $(DOC)
		rm -rf html

distclean:	clean
		rm -f $(TARGETS) config.cache config.status Makefile
		rm -rf autom4te.cache
